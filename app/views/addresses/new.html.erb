<h1>Direccion</h1>

<div class="row">
	<div class="span4 offset4">
    	<%= form_for(@address) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :address_name%>
            <%= f.text_field :address_name %>

      	    <%= f.label :location_type %>
            <%= f.select :location_type, [['Pais','Country'],['Estado','State'],['Ciudad','City']] %>

            <%= f.label :belong_address %>
            <%= f.collection_select :belong_address, Address.all, :belong_address, :address_name, :prompt => true  %>
            

      		<%= f.submit "Agregar Direccion", class: "btn btn-success" %>

    	<% end %>
  	</div>
</div>