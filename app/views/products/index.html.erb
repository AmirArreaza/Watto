<% provide(:title, 'All users') %>
<br/>
<ul>
  <% @products.each do |product| %>
    <li>
      <h4><%= product.name %></h4>
	  <ul>
		<li>
			<%= product.stock %>
		</li>
		<li>
			<%= product.description %>
		</li>
		<li>
			<%= image_tag product.image_url, :class => "img-polaroid" %>
		</li>
	  </ul>
    </li>
  <% end %>
</ul>

<%= will_paginate @products %>