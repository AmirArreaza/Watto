<h1>Reservacion del producto: <%= @reservation.product.name %></h1>	
<div class="row">
	<div class="span6 offset3">
    	<%= form_for(@reservation, :url => {:action=>"update", :controller=>"reservations"}, :method => :put) do |f| %>
      		<%= render 'shared/error_messages', object: f.object %><br/>
      		<%= f.label :quantity%>
			<%= f.text_field :quantity %><br/>
			
      		<%= f.submit "Guardar Cambios", class: "btn btn-large btn-primary" %>
    	<% end %>
  	</div>
</div>