<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-error">
            Existen errores en su solicitud <%= pluralize(object.errors.count, "error") %>.
        </div>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li>* <%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>